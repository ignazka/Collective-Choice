{{!-- VOTE-BUTTONS --}}
{{#unless user}}

  <section>
    <div id='callToAction'>
      <p>Push the <span style="color:#ff0000;">red button</span> to vote for worlds end</p>
      <p>Push the <span style="color: #47d86e;">green button</span> to vote for worlds persist</p>
      <p><a href="/signup">Sign up</a> to leave a comment for your voting</p>
    </div>
    <hr>
    <form class="fat-buttons" action="/vote" method="post">
      <div class="ctn-buttons">
        <button class="btn-green" name="btnGreen" value="green">  
          <img src="/images/seed-button.png" alt="green-button to save the world"> 
        </button>
        <button class="btn-red" name='btnRed' value="red">
          <img src="/images/cloud-button.png" alt="red-button to doom the world">
        </button>
      </div>
      <div class="form-checkbox">
        <input type="checkbox" name="isBot" checked> 
        I am a bot - you are still counted, Terminator.
      </div>
    </form>
  </section>
{{/unless}}

{{!-- COMMENT SECTION --}}
{{#if user}}
<section class="comment-form">
  {{#if findUser.comment}}
  {{> editComment}}
  {{else}}
  {{> createComment}}
  {{/if}}
</section>
{{/if}}

<div class="crt" id='earth'>
</div>
